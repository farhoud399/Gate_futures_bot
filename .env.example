# ===== Gate.io API Keys =====
GATE_API_KEY=YOUR_API_KEY
GATE_API_SECRET=YOUR_API_SECRET

# ===== Environment =====
# true -> Testnet (paper trading). false -> Real account
USE_TESTNET=true

# ===== Futures Settings =====
SETTLE=usdt
CONTRACT=BTC_USDT
LEVERAGE=10
MARGIN_MODE=ISOLATED   # ISOLATED or CROSS
RISK_PCT=0.1           # Use up to 10% of available margin per trade (margin used, not notional)

# ===== Strategy =====
INTERVAL=1m            # Candlestick interval: 1m, 5m, 15m, etc.
FAST_EMA=12
SLOW_EMA=26
RSI_LEN=14
RSI_BUY=35
RSI_SELL=65

# ===== Safety =====
STOP_LOSS_PCT=0.005    # 0.5% stop
TAKE_PROFIT_PCT=0.01   # 1% take profit

# Loop every N seconds (0 = run once)
LOOP_SECONDS=60
